<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/vendor.min.css" />
        <script src="~/vendor.min.js"></script>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/vendor.min.css" />
        <script src="~/vendor.min.js"></script>
    </environment>
</head>

<body style="background-color:#edeef1">

    <script>
        $(document).ready(function () {
            $(".select2").select2({
                theme: "bootstrap4"
            });
        });
    </script>

    <partial name="_HeaderPartial" />

    <div class="container h-100">
        <div class="row align-items-center h-100">
            <div class="col-lg-7 mx-auto">
                <div class="jumbotron" style="background-color:#edeef1">
                    @RenderBody()
                </div>
            </div>
        </div>

        @foreach (var message in TempData.GetMessages())
        {
            string header = "";
            switch (message.Type)
            {
                case MessageType.Success:
                    header = "Успешно!";
                    break;

                case MessageType.Info:
                    header = "Информация!";
                    break;

                case MessageType.Warning:
                    header = "Внимание!";
                    break;

                case MessageType.Danger:
                    header = "Ошибка!";
                    break;
            }

            <div class="alert alert-@message.Type.ToString().ToLower() alert-dismissible fade show fixed-bottom" role="alert">
                <h4 class="alert-heading">@header</h4>
                <hr />
                <p>@Html.Raw(message.Text)</p>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>